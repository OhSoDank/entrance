#
# Construct a basic virtual environment for python + dependencies
#
# Note that this sets the environment variable required to bring in the
# optional PyPi dependencies used only by the router interaction features
#

python3 -m venv venv
venv/bin/pip3 install wheel 
venv/bin/pip3 install --upgrade 'entrance[with-router-features]'

echo
echo To run, enter '"./run"'
echo
